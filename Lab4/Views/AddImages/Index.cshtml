@model IEnumerable<Lab4.Models.AddImage>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<h1>Show ads for community </h1>
<a asp-action="Upload">Upload New</a>
<br />  
<br />  
<a asp-controller="Communities" asp-action="Index">Back to List</a>    

@if (Model.Count() == 0)
{
        <p>There are no files to display.</p>
    }
    else
    {
        <table style="color:#fff" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FileName)
                    </th>
                    <th>
                        Image
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FileName)
                        </td>
                        <td>
                            <img src="@item.Url" style="max-width:400px;" />
                        </td>
                        <td><a asp-action="Delete" asp-route-id="@item.AddImageId">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
