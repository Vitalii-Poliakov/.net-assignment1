@{
    ViewData["Title"] = "Upload";
    Layout = "_Layout";
}
<h1>Upload</h1>

<h4>Answer questions via image upload</h4>
<hr />
<div style="color:#fff"  class="row">
    <div class="col-md-4">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="answerImage" type="file" />
                </div>
            </div>
            <div class="form-group">
                <button name="Upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}